@model HelpDesk2.Models.TipoServico

@{
    ViewBag.Title = "Create";
    ViewBag.TituloPanel = "Tipo Serviço";
}


@using (Html.BeginForm("Create", "TipoServiço", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend></legend>
        <div>
            <div class="form-group col-lg-12 col-md-12">
                @Html.LabelFor(model => model.Descricao, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Descricao, "", new { @class = "form-control" })
                <p>@Html.ValidationMessageFor(model => model.Descricao)</p>
            </div>

            <div class="form-group col-lg-12 col-md-12">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
