@model HelpDesk2.Models.Status

@{
    ViewBag.Title = "Edit";
    ViewBag.TituloPanel = "Status";
}

@using (Html.BeginForm("Edit", "Status", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Editar</legend>
        <div class="row">
            <div class="form-group col-lg-12 col-md-12">
                @Html.LabelFor(model => model.Descricao, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Descricao, "", new { @class = "form-control" })
                <p>@Html.ValidationMessageFor(model => model.Descricao)</p>
            </div>

            <div class="form-group col-lg-12 col-md-12">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
