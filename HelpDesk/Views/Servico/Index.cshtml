@model IEnumerable<HelpDesk2.Models.Servico>

@{
    ViewBag.Title = "Index";
    ViewBag.TituloPanel = "Serviço";
}

<p>
    @Html.ActionLink("Cadastrar", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoServico.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoServico.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-info glyphicon glyphicon-pencil" })
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-info glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>
