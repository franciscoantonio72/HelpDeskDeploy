@model HelpDesk2.Models.Servico

@{
    ViewBag.Title = "Create";
    ViewBag.TituloPanel = "Serviço";
}

@using (Html.BeginForm("Create", "Serviço", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    <fieldset class="col-lg-12 col-md-12">
        <legend>Novo Serviço</legend>
        <div class="row">
            <div class="form-group col-lg-12 col-md-12">
                @Html.LabelFor(model => model.Nome, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Nome, "", new { @Class = "form-control" })
                <p>@Html.ValidationMessageFor(model => model.Nome)</p>
            </div>

            <div class="form-group col-lg-12 col-md-12">
                @Html.LabelFor(model => model.TipoServicoId, "Tipo Servico", new { @class = "form-label" })
                @Html.DropDownListFor(model => model.TipoServicoId, (IEnumerable<SelectListItem>)ViewBag.TipoServicoId, new { @class = "form-control" })
                <p>@Html.ValidationMessageFor(model => model.TipoServicoId)</p>
            </div>

            <div class="form-group col-lg-12 col-md-12">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>

        </div>
    </fieldset>
}
<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
