@model HelpDesk2.Models.Setor

@{
    ViewBag.Title = "Create";
    ViewBag.TituloPanel = "Setor";
}

@using (Html.BeginForm("Create", "Setor", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    <fieldset class="col-lg-12 col-md-12">
        <legend>Novo Setor</legend>
        <div class="row">
            <div class="form-group col-lg-12 col-md-12">
                @Html.LabelFor(model => model.Nome, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Nome, "", new { @class = "form-control" })
                <p>@Html.ValidationMessageFor(model => model.Nome)</p>
            </div>

            <div class="form-group col-lg-12 col-md-12">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
